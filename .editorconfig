# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8

end_of_line = lf

indent_style = tab
tab_width = 4

insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_style = space
indent_size = 2

[.eslintrc]
indent_style = space
indent_size = 2

[*.test]
indent_style = space
indent_size = 4

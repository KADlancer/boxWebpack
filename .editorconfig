# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf
max_line_length = 100

[*.md]
trim_trailing_whitespace = false

[*.{json,*rc}]
indent_size = 2

[.eslintrc]
indent_size = 2
